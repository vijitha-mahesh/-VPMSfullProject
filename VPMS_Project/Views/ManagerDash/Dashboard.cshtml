@{
    Layout = "_ManagerLayout";
    ViewData["Title"] = "Dashboard";

}
@model EmpModel
<link href="~/CSS/ManageDash.css" rel="stylesheet" />
<div class="content">
    <div class="navbar">
        <h4>
            <br>
            <a asp-controller="EmployeeHome" asp-action="Portal" title="Back">
                <i class='fas fa-arrow-left mr-4'></i>
            </a>Dashboard
        </h4>
    </div>
    <hr>
    <div class="container" >
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4 text-center">
                <div class="jumbotron jumbotron-fluid" style="height:320px;background-color:rgba(193, 230, 251, 0.36)">
                    <h1 class="display-4">Employee Details</h1>
                    <form class="form-inline" enctype="multipart/form-data" method="get" asp-action="ViewEmp" asp-controller="ManagerDash">
                        <div class="container">
                            <div class="form-group">
                                <select asp-for="EmpId" class="chosen form-control custom-select mb-3" asp-items="ViewBag.Emps" id="f1" onchange="check1()">
                                    <option value="">Choose a employee</option>
                                </select>
                                <span asp-validation-for="EmpId" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input class="b1 btn btn-dark" type="submit" value="Select" id="myBtn" disabled/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Manager
{
    
    <script>      
    
        $(function () {
            $(".chosen").chosen();
        });

    </script>

<script>

    function check1()
    {
        document.getElementById("myBtn").disabled = false;
    }
    </script>
}



