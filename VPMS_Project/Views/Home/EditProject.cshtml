
@{
    Layout = "_Layout";
    ViewData["Title"] = "EditProject";
}
@model Project
    <div class="container-fluid" id="addP1">
        <h1 class="pt-3" style="font-size: 20px; font-weight: bold; ">EDIT PROJECT</h1>

        @if (ViewBag.Success == true)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Congratulations!</strong> You successfully added a project, Click <a asp-action="GetProjectById" asp-route-id="@ViewBag.id">Here</a> to view project.
            </div>
        }

    <div class="container">
        <div class="row ml-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
            </svg>
            <a class="text-decoration-none mb-1" asp-action="GetProjectById" asp-controller="Home" asp-route-id="@Model.Id">Project view</a>
        </div>
    </div>

    <div class="container">
        <div class="row ">
            <div class="col-lg-12 mx-auto pb-5 pt-3 ">
                <div class="mt-2 mx-auto border-0">
                    <div class="card-body border-0">
                        <div class="container">
                            <form method="post" asp-action="EditProject">
                                <div class="controls">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group"> <label asp-for=@Model.Name>Name*</label> <input asp-for=@Model.Name type="text" class="form-control"> </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Project Type</label> <select class="form-control" asp-for="@Model.Type">
                                                    <option value="" selected disabled>Select Project Type</option>
                                                    <option>Project</option>
                                                    <option>Maintainance</option>
                                                    <option>R &amp; D</option>
                                                    <option>Internal</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="@Model.ProjectManagerId">Project Manager</label> <select asp-for="@Model.ProjectManagerId" asp-items="ViewBag.ProjectManager" class="form-control">
                                                    <option value="" selected disabled>Select Project Manager</option>
                                                </select>
                                                <span asp-validation-for="ProjectManagerId" class="text-danger font-weight-bold" style="font-family:revert; font-size:77%"></span>
                                            </div>
                                        </div>
                                    </div>




                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="@Model.CustomerId">Customer</label> <select asp-for="@Model.CustomerId" asp-items="ViewBag.Customer" class="form-control">
                                                    <option value="" selected disabled>Select Customer</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group"> <label asp-for="@Model.ContractValue">Contract Value</label> <input asp-for="@Model.ContractValue" type="number" class="form-control"> </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group"> <label asp-for="@Model.EstimetedBudget">Estimated Budget</label> <input asp-for="@Model.EstimetedBudget" type="number" class="form-control"> </div>
                                        </div>
                                    </div>



                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group"> <label asp-for="@Model.StartDate">Start Date</label> <input asp-for="@Model.StartDate" type="date" class="form-control"> </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group"> <label asp-for="@Model.DeliveryDate">Delivery Date</label> <input asp-for="@Model.DeliveryDate" type="date" class="form-control"> </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="@Model.Status">Project Status</label> <select asp-for="@Model.Status" class="form-control">
                                                    <option value="" selected disabled>Select Project Status</option>
                                                    <option>Ongoing</option>
                                                    <option>Closed</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group"> <label>Add Plans</label> <input type="file" class="form-control"> </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group"> <label asp-for="@Model.Cost">Current Expences</label> <input asp-for="@Model.Cost" type="number" class="form-control"> </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group"> <label asp-for="@Model.ExtraCost">Extra expences</label> <input asp-for="@Model.ExtraCost" type="number" class="form-control"> </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group"> <label asp-for="@Model.Description">Project Description</label> <textarea asp-for="@Model.Description" class="form-control" rows="3"></textarea> </div>
                                        </div>
                                        <div class="col-md-12"> <input asp-action="EditProject" type="submit" class="btn pt-2 btn-block " value="Update Project"> </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- /.8 -->
            </div> <!-- /.row-->
        </div>
    </div>
    </div>