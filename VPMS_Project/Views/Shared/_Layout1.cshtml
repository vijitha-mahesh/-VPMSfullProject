<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Project Management Application</title>


    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
  @*<link href="~/css/site1.css" rel="stylesheet" />*@
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand text-white" asp-controller="PreHome" asp-action="Index">
                    <img src="~/images/logo.png" width="30" height="30" />
                    BELVANTAGE
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @*<ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary">Login</a>
                            <a class="btn btn-primary">Register</a>
                        </li>
                    </ul>*@
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Home</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item text-dark" asp-controller="PreHome" asp-action="Index">Home</a>
                                @*<a class="dropdown-item text-dark" asp-controller="PreHome" asp-action="AboutUs">About US</a>
                                <a class="dropdown-item text-dark" asp-controller="PreHome" asp-action="ContactUs">Contact</a>*@
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Project</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item text-dark" asp-controller="Project" asp-action="GetAllProjects">All Project</a>
                                <a class="dropdown-item text-dark" asp-controller="Project" asp-action="AddNewProject">Add New Project</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Customer</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item text-dark" asp-controller="PreCustomer" asp-action="GetAllCustomers">All Customer</a>
                                <a class="dropdown-item text-dark" asp-controller="PreCustomer" asp-action="AddNewCustomer">Add New Customer</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Project Plan</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item text-dark" asp-controller="PreTask" asp-action="GetAllTasks">Project Plan</a>
                                <a class="dropdown-item text-dark" asp-controller="PreTask" asp-action="AddNewTask">Add Project Plan</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Budget</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item text-dark" asp-controller="Budget" asp-action="GetAllBudgets">Project Budget</a>
                                <a class="dropdown-item text-dark" asp-controller="Budget" asp-action="AddNewBudget">Add Project Budget</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class=" footer text-muted text-center">
        <div class="container">
            Copyright &copy; Project Management Application @DateTime.Now.Year
        </div>
    </footer>


    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
