@using VPMS_Project.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<WorkQModel>

<div>
    <div class="col-md-8 col-lg-12 col-sm-12">
        <br>    <h4 id="h" style="font-family:Castellar;line-height:50px">
            <b>My Work Quality</b>
        </h4>
    </div>

    <div>
        @if (Model.Count() == 0)
        {
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h3 style="font-family:Castellar;">No Rates Received Yet</h3>

                </div>
            </div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Task Name</th>
                        <th scope="col">Project</th>
                        <th scope="col">Given By</th>
                        <th scope="col">Work Quality%</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Task</td>
                            <td>@task.Project</td>
                            <td>@task.GivenBy</td>
                            <th scope="row">@task.Quality</th>

                        </tr>

                    }
                </tbody>
            </table>
        }

    </div>



</div>
