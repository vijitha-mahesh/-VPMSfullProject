@using VPMS_Project.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<CommunicationModel>

<div>
    <div class="col-md-8 col-lg-12 col-sm-12">
        <br>    <h4 id="h" style="font-family:Castellar;line-height:50px">
            <b>My Communication Skills</b>
        </h4>
    </div>

    <div>
        @if (Model.Count() == 0)
        {
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h3 style="font-family:Castellar;">No Rates Received Yet</h3>

                </div>
            </div>
        }
        else
        {
            <div>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Connection Id</th>
                            <th scope="col">Communication%</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var com in Model)
                        {
                            <tr>

                                <td> @com.CommuniId</td>
                                <th scope="row">@com.CommunicationVal %</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>



</div>

