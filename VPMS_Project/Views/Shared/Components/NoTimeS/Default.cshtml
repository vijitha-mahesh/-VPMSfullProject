
@using VPMS_Project.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<TimeSCheck>
    <!-- Button trigger modal -->

<button type="button" class="btn btn-outline-dark btn-block" data-toggle="modal" data-target="#exampleModal">Time Sheet Not Entered Employees</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                    <h5 class="mt-3 modal-title" id="exampleModalLabel" style="font-family:Lucida Console;color:black"><i class='far fa-calendar-alt'></i>Time Sheet Not entered Employees</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-hover mt-4">
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td scope="row" style="width:10%">
                                    <div>
                                        <img src="@(string.IsNullOrEmpty(emp.PhotoURL) ? "~/images/defa.png" : emp.PhotoURL)" class="card-img-top rounded-circle" style="width:50px;height:45px;" asp-append-version="true" />
                                    </div>
                                </td>
                                <td scope="row" style="width:40%">@emp.EmpName</td>
                                <td>Date : @emp.Date.Day/ @emp.Date.Month/ @emp.Date.Year </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>









