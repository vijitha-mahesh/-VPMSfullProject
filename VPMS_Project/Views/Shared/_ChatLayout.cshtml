<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatApp</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css'  href='~/css/chat.css'>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    
</head>
<body>

    <div class="navbar" id="nav">
            <a asp-controller="Home" asp-action="ChatIndex">Home</a>
            <a asp-controller="Home" asp-action="Find">Find User</a>
            <a asp-controller="Home" asp-action="BrowseRooms">Browse Rooms</a>
            <a asp-controller="Home" asp-action="Private">Messages</a>    
           <a asp-controller="Account" asp-action="#" class="logout">Logout</a>
            
    </div>

    <div class="main">

        @*@if(User.Identity.IsAuthenticated)
        {
             <vc:room></vc:room>
        }*@
        <vc:room></vc:room>
        <div class="chat">
             @RenderBody()
        </div>

    </div>

    <div class="modal" id="create-room-modal">
        <form asp-controller="Home" asp-action="CreateRoom" class="modal-body">
            <button class="close" onclick="closeModal()">X</button>
            <header>Create Room</header>
            <div>
                <input name="name" required>
            </div>
            <footer>
                <button>Create</button>
            </footer>
        </form>   
    </div>
    <script src="~/js/chat.js"></script>
    @RenderSection("Scripts", false)

</body>
</html>