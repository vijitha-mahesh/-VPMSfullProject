
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Task";
}
@model Taskz
    <div class="container-fluid pb-5" id="addP1">

        <h1 class="pt-3" style="font-size: 20px; font-weight: bold; ">EDIT TASK</h1>

        <div class="container">
            <div class="row ml-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                    <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                </svg>
                <a class="text-decoration-none mb-1" asp-action="GetTasks" asp-controller="Task">Back to task view</a>
            </div>
        </div>

        <div class="container">
            <div class="row pb-5">
                <div class="col-lg-12 mx-auto">
                    <div class="mt-2 mx-auto border-0">
                        <div class="card-body border-0">
                            <div class="container">
                                <form id="contact-form" method="post" asp-action="EditTask" asp-controller="Task">
                                    <div class="controls">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.projectId">Project</label>
                                                    <input placeholder="@ViewBag.Project" type="text" class="form-control" disabled />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="@Model.EmployeeId">Employee</label>
                                                    <input placeholder="@ViewBag.Name" type="text" class="form-control" disabled>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group"> <label asp-for="@Model.StartDate">Start Date & Time</label> <input asp-for="@Model.StartDate" type="datetime-local" class="form-control" disabled> </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group"> <label asp-for="@Model.EndDate">End Date & Time</label> <input asp-for="@Model.EndDate" class="form-control" type="datetime-local" disabled> </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group"> <label asp-for="@Model.Name">Task Name</label> <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Enter task name"> </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group"> <label asp-for="@Model.Description">Description</label> <textarea asp-for="@Model.Description" type="text" class="form-control" rows="1"></textarea> </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12"> <input asp-action="EditTask" asp-controller="Task" type="submit" class="btn pt-2 btn-block " value="update Task"> </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div> <!-- /.8 -->
                </div> <!-- /.row-->
            </div>
        </div>













    </div>
