@model List<Salary>



<div class="row p-2 text-white ml-3" style="background-color:#617477;border-radius:10px">
    <div class="col-3">
        <span>DESIGNATION</span>
    </div>
    <div class="col-3">
        <span>RATE</span>
    </div>
   
</div>



@if (Model != null)
{
    @foreach (var rate in Model)
    {
        <div class="row pt-1 pl-3 pr-3 mb-2 pb-0 ml-3" style="background-color: #0000001f; border-radius: 10px;height:50px">
            <div class="col-3">@rate.Designation</div>
            <div class="col-3">@rate.HourlyRate</div>
            <div class="col-3">
                <p class="button">
                    <a  role="button" asp-action="EditSalaryInfo" asp-controller="Task" asp-route-id="@rate.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                </p>
            </div>
            <div class="col-3">
                @if (rate.Designation != "project manager")
                {
                    <p class="button">
                        <a  role="button" asp-action="DeleteSalary" asp-controller="Task" asp-route-id="@rate.Id" onclick="return confirm('Are you sure you want to delete this rate? ')">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#792323" class="bi bi-x-square-fill" viewBox="0 0 16 16">
                                <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
                            </svg>
                        </a>
                    </p>

                }
            </div>
        </div>
    }
}

