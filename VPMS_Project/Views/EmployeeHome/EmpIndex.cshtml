<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width , initial-scale=1, shrink-to-fit=no">
    <title>Employee</title>
    <link href="~/CSS/StyleHome.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link href="~/CSS/EmpIndex.css" rel="stylesheet" />
    <link rel="stylesheet" href="bower_components/aos/dist/aos.css">
    <link href="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-image: url('/images/background.jpg');
            background-blend-mode: overlay;
            background-color: #ecdcdad1;
            background-repeat: no-repeat;
            position: center;
            background-size: 100% 100%;
            height: 690px;
            width: 90%;
            max-width: 100%
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-sm-12 col-lg-12 col-md-12 ">
            <nav class="navbar navbar-dark ">
                <div>
                    <font>
                        <a asp-controller="Home" asp-action="Index2">
                            <i class='fas fa-arrow-circle-left text-white mr-3'></i>
                        </a>ADMIN PORTAL
                    </font>
                </div>
            </nav>
        </div>
    </div>

    <div class="row ml-5">
        <div class="col-sm-12 col-lg-8 col-md-12 ">
            <div class="row">
                <div class=" col-lg-5 col-md-12  col-sm-12  align-self-md-center p-5">
                    <a asp-controller="Emp_Manage" asp-action="ViewAllEmp">
                        <div class="card justify-content-md-center justify-content-sm-center">
                            <img src="~/images/e.png" alt="Avatar" class="align-self-md-center align-self-sm-center">
                            <div class="container text-center f2">Employee Manage </div>
                        </div>
                    </a>
                </div>



                <div class=" col-lg-5 col-md-12  col-sm-12 p-5">
                    <a asp-controller="AdminLeave" asp-action="LeaveDetails">
                        <div class="card justify-content-md-center justify-content-sm-center">
                            <img src="~/images/c.png" alt="Avatar" class="align-self-md-center align-self-sm-center">
                            <div class="container text-center f2">Leave Manage </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class=" col-lg-5 col-md-12 col-sm-12 p-5">
                    <a asp-controller="AdminAttendence" asp-action="viewAttendence">
                        <div class="card justify-content-md-center justify-content-sm-center">
                            <img src="~/images/atten.jpg" alt="Avatar" style="width:120px;height:90px" class="align-self-md-center align-self-sm-center">
                            <div class="container text-center f2">Attendence</div>
                        </div>
                    </a>
                </div>

                <div class=" col-lg-5  col-md-12 col-sm-12 p-5">

                    <a asp-controller="AdminTimeS" asp-action="ViewTimeSheet">
                        <div class="card justify-content-md-center justify-content-sm-center">
                            <img src="~/images/d.jpg" alt="Avatar" class="align-self-md-center align-self-sm-center align-content-center">
                            <div class="container text-center f2"> Time Sheet </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-lg-4 col-md-12 mt-5" style="background-color:rgba(23, 22, 22, 0.50);border-radius:15px"  data-aos="zoom-in" data-aos-duration="1500">

            <div class="text-center text-white-50 mt-4 mb-4" colspan="2" style="font-family:Castellar;font-size:16pt">NOTIFICATION BAR</div>
            @if (ViewBag.Attcount != 0)
            {
                <div class="alert alert-dark alert-dismissible" style="font-family:'Comic Sans MS'">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <div class="row">
                        <div class="col-lg-1"><i class='fas fa-bell mt-2' style='font-size:20px'></i></div>
                        <div class="col-lg-11"><strong>Received @ViewBag.Attcount Attendence requests </strong><div style="font-size:12pt;" class="text-black-50"> <a asp-controller="AdminAttendence" asp-action="AttApprove"> Click here </a>to view.</div></div>
                    </div>

                </div>
            }

            @if (ViewBag.Rcount != 0)
            {
                <div class="alert alert-dark alert-dismissible" style="font-family:'Comic Sans MS'">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <div class="row">
                        <div class="col-lg-1"><i class='fas fa-bell mt-2' style='font-size:20px'></i></div>
                        <div class="col-lg-11"><strong>Received @ViewBag.Rcount Leave recommendation requests </strong><div style="font-size:12pt;" class="text-black-50"> <a asp-controller="AdminLeave" asp-action="Recomend"> Click here </a>to view.</div></div>
                    </div>

                </div>
            }

            @if (ViewBag.Acount != 0)
            {
                <div class="alert alert-dark alert-dismissible" style="font-family:'Comic Sans MS'">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <div class="row">
                        <div class="col-lg-1"><i class='fas fa-bell mt-2' style='font-size:20px'></i></div>
                        <div class="col-lg-11"><strong>Received @ViewBag.Acount Leave approval requests </strong><div style="font-size:12pt;" class="text-black-50"> <a asp-controller="AdminLeave" asp-action="Approve"> Click here </a>to view.</div></div>
                    </div>

                </div>
            }
            @if (ViewBag.Taskcount != 0)
            {
                <div class="alert alert-dark alert-dismissible" style="font-family:'Comic Sans MS'">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <div class="row">
                        <div class="col-lg-1"><i class='fas fa-bell mt-2' style='font-size:20px'></i></div>
                        <div class="col-lg-11"><strong>Received @ViewBag.Taskcount Task recommendation requests </strong><div style="font-size:12pt;" class="text-black-50"> <a asp-controller="AdminTimeS" asp-action="RecommendTask"> Click here </a>to view.</div></div>
                    </div>

                </div>
            }

        </div>
    </div>


    <footer class="footer text-muted text-center">
        <div class="container-fluid p-3 p-md-3">
            &copy; @DateTime.Now.Year <font style="color:royalblue">&nbsp; Bellvantage (Pvt) Ltd.&nbsp;</font> All rights reserved
        </div>
    </footer>

    <script src="bower_components/aos/dist/aos.js"></script>
    <script src="https://cdn.rawgit.com/michalsnik/aos/2.1.1/dist/aos.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <script>
        AOS.init();
    </script>

</body>
</html>