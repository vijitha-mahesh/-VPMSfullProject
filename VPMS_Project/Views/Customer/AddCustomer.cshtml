
@{
    Layout = "_Layout";
    ViewData["Title"] = "AddCustomer";
}
@model Customer

    <div class="container-fluid" id="addP1">
        <h1 class="pt-3" style="font-size: 20px; font-weight: bold; ">CUSTOMER</h1>

        @if (ViewBag.isSuccess == true)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Congratulations!</strong> You successfully added a customer.
            </div>
        }

        @if (ViewBag.delete == true)
        {
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Congratulations!</strong> You successfully deleted a customer.
            </div>
        }

        @if (ViewBag.duplicate == true)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>Customer Already exists..</strong>
            </div>
        }

        <div class="row mt-0">
            <div class="col-md-3 mt-4 mx-auto pr-0">
                <form id="contact-form" method="post" asp-action="AddCustomer">
                    <div class="controls">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group"> <label asp-for=Name>Name*</label> <input asp-for=Name type="text" class="form-control" placeholder="Name"> </div>
                                <span asp-validation-for="Name" class="text-danger font-weight-bold" style="font-family:revert; font-size:77%"></span>
                            </div>
                        </div><div class="row">
                            <div class="col-12">
                                <div class="form-group"> <label asp-for="ContactNo">Contact Number</label> <input asp-for="ContactNo" type="number" class="form-control" placeholder="Contact No."> </div>
                                <span asp-validation-for="ContactNo" class="text-danger font-weight-bold" style="font-family:revert; font-size:77%"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group"> <label asp-for="Email">Email</label> <input asp-for="Email" type="email" class="form-control" placeholder="Email"> </div>
                                <span asp-validation-for="Email" class="text-danger font-weight-bold" style="font-family:revert; font-size:77%"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 ">
                                <div class="form-group"> <label asp-for="Address">Address</label> <textarea asp-for="Address" class="form-control" placeholder="Enter customer address" rows="2"></textarea> </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 "> <input asp-action="AddCustomer" asp-controller="Customer" type="submit" class="btn pt-2 btn-block " value="Add Customer"> </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-md-8 pl-0" style="border-left: outset 2px #c1c1c1bf;">


