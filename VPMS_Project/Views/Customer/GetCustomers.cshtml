@model List<Customer>



<div class="row">
    <div class="col-12 table-responsive ">
        <table class="table table table-hover table-striped " id="customer"  width="100%" cellspacing="0">

            <thead>
                <tr style="line-height: 30px">


                    <th scope="row">NAME</th>
                    <th scope="row">CONTACT NO.</th>
                    <th scope="row">Email</th>
                    <th scope="row">ADDRESS</th>
                    <th scope="row"></th>
                    <th scope="row"></th>


                </tr>
            </thead>

            <tbody>


                @if (Model != null)
                {
                    @foreach (var customer in Model)
                    {
                <tr>

                    <td scope="row">@customer.Name</td>
                    <td scope="row">@customer.ContactNo</td>
                    <td scope="row">@customer.Email</td>
                    <td scope="row">@customer.Address</td>
                    <td scope="row">
                        <p class="button">
                            <a role="button" asp-action="EditCustomer" asp-controller="Customer" asp-route-id="@customer.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg>
                            </a>
                        </p>
                    </td>
                    <td scope="row">
                        <p class="button">
                            <a role="button" asp-action="DeleteCustomer" asp-controller="Customer" asp-route-id="@customer.Id" onclick="return confirm('Are you sure you want to delete customer @customer.Name ? ')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#792323" class="bi bi-x-square-fill" viewBox="0 0 16 16">
                                    <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
                                </svg>
                            </a>
                        </p>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>



