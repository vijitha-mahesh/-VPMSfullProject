
@{
    Layout = "_Layout";
    ViewData["Title"] = "EditCustomer";
}
@model Customer

<div class="container-fluid" id="addP1">
    <h1 class="pt-3" style="font-size: 20px; font-weight: bold; ">EDIT CUSTOMER</h1>

    @if (ViewBag.Success == true)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Congratulations!</strong> You successfully updated customer.
        </div>
    }

    <div class="row ml-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
            <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
        <a class="text-decoration-none mb-1" asp-action="AddCustomer" asp-controller="Customer">Back to customer add</a>
    </div>

    <div class="row ">
        <div class="col-md-3 mt-3 mx-auto pr-0">
            <form id="contact-form" method="post" asp-action="EditCustomer" asp-controller="Customer">
                <div class="controls">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group"> <label asp-for=@Model.Name>Name*</label> <input asp-for=@Model.Name type="text" class="form-control" placeholder="Enter project name"> </div>
                            <span asp-validation-for="Name" class="text-danger font-weight-bold" style="font-family:revert; font-size:77%"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group"> <label asp-for="@Model.ContactNo">Contact Number</label> <input asp-for="@Model.ContactNo" type="number" class="form-control" placeholder="Enter contact No."> </div>
                            <span asp-validation-for="ContactNo" class="text-danger font-weight-bold" style="font-family:revert; font-size:77%"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group"> <label asp-for="@Model.Email">Email</label> <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Email"> </div>
                            <span asp-validation-for="Email" class="text-danger font-weight-bold" style="font-family:revert; font-size:77%"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group"> <label asp-for="@Model.Address">Address</label> <textarea asp-for="@Model.Address" class="form-control" placeholder="Enter customer address" rows="1"></textarea> </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12"> <input asp-action="EditCustomer" asp-controller="Customer" type="submit" class="btn pt-2 btn-block " value="Update Customer"> </div>
                    </div>
                </div>
            </form>
        </div>




        <div class="col-md-8 pl-0" style="border-left: outset 2px #c1c1c1bf;">

